<html>
   <head>
    <title>Blog App</title>
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.1.4/semantic.min.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/app.css">
   </head>
   <body>


      <nav class="navbar">
         <div class="logo">Blog site</div>
         <ul class="nav-links">
            <input type="checkbox" id="checkbox_toggle">
            <label for="checkbox_toggle" class="hamburger">&#9776;</label>
            <div class="menu">
               
               <% if(!currentUser){ %>
                  <li class="li" ><a  class="a" href="/">Home</a></li>
                  <li class="li" ><a  class="a" href="/signup">Sign Up</a></li>
                  <li class="li" ><a  class="a" href="/login">Login</a></li>
               <% }else{ %>
                  <li class="li">Signed in as: <%= currentUser.username %></li>
                  <li class="li" ><a  class="a" href="/logout">Logout</a></li>
                  <li class="li" ><a  class="a" href="/blogs/new">New Post</a></li>
                  
               <% } %>

            </div> 
         </ul>
      </nav>


      <div style="margin-top: 7px;">
         <% if(error && error.length > 0){ %>
            <div>
               <span style="color: red; font-size: 20px;"> <%= error %> </span>
            </div>
         <% }%>

         <% if(success && success.length > 0){ %>
            <div>
               <span style="color: green; font-size: 20px;"> <%= success %></span>
            </div>
         <% }%>
         
      </div>


